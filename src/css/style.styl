headingcolor = #195ca0
calloutcolor = #7ccdde;
fontcolor = #404040;

body {
    font-family: 'Montserrat', sans-serif;
    color: fontcolor;
    font-family: 'Muli', sans-serif;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
}

.header {
    background-color: #79c499;
    height: 106px;
    display: flex;
    padding-left: 200px;

    .logo-area {
        flex: 1;

        .logo {

        }
    }

    .menu {
        flex: 1;
        display: flex;
        list-style: none;
        margin-top: 45px;
        padding: 0;

        li {
            margin-right: 15px;

            a {
                color: #ffffff;
                text-transform: uppercase;
                text-decoration: none;
            }
        }
    }
}

.home-banner {
    position: relative;

    img {
        width: 100%;
    }

    .content {
        font-family: 'Montserrat', sans-serif;
        position: absolute;
        left: 20%;
        top: 15%;
        color: #383045;
        width: 40%;

        .title-small {
            color: #14579b;
            font-size: 22px;
            text-transform: lowercase;
            font-weight: bold;
        }

        .title-large {
            color: #14579b;
            font-size: 42px;
            text-transform: uppercase;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .focused {
            text-transform: uppercase;
            font-size: 18px;
            margin-bottom: 35px;

            .you {
                color: #ffffff;
                font-size: 42px;
                position: relative;
                top: 7px;
            }
        }

        .tag {
            padding-left: 15px;
            border-left: solid 2px #000000;
            position:relative;
            left: -15px;
        }
    }
}

.content {
    h1 {
        color: headingcolor;
        text-transform: uppercase;
        font-weight: normal;
        text-align: center;
        font-family: 'Montserrat', sans-serif;
    }
}

.home {

    .main {
        margin-bottom: 50px;
    }

    .callout-band {
        background-image: url(/images/grey-brick.jpg);
        background-position: 0 100px;
        background-repeat: repeat-x;
        height: 300px;
        margin-bottom: 50px;

        .callout-area {
            display: flex;

            .left {
                width: 29%
                img {
                    width: 100%;
                }
            }
            .info {
                flex: 1;
                background-color: calloutcolor;
                color: #ffffff;
                padding: 10px;

                h3 {
                    font-weight: normal;
                    text-transform: uppercase;
                }
            }
            .right {
                width: 45.5%
                img {
                    width: 100%;
                }
            }
        }
    }

    .specialties-area {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        margin-bottom: 50px;

        .specialty {
            flex: 1;
            text-align: center;
            margin-left: 9px;
            margin-right: 9px;
            font-size: 18px;
            line-height: 20px;

            h3 {
                text-transform: uppercase;
                text-decoration: underline;
                font-size: 24px;
            }
        }
    }

    .newsletter-band {
        background-color: #ececec;
        margin-bottom: 50px;

        .newsletter-area {
            .icon-area {

            }
            .newsletter {

            }
        }
    }

    .schedule-area {
        margin-bottom: 50px;
    }

    .green-band {
        background-color: #a4d2b8;
        padding: 15px;

        .green-area {
            text-align: center;

            h3 {
                text-align: center;
                color: #ffffff;
                text-transform: uppercase;
                font-size: 26px;
                font-weight: normal;
            }


            .green-callouts {
                display: flex;
                justify-content: space-between;

                .callout {

                }
            }
        }
    }

    .saying-band {
        background-color: #ececec;
        margin-bottom: 0;
        min-height: 80px;
        padding-top: 50px;
        padding-bottom: 50px;

        .saying-area {
            display: flex;
            justify-content: space-between;

            .saying-title {
                flex: 1;

                h3 {
                    color: headingcolor;
                    text-transform: uppercase;
                    font-size: 26px;
                    border-left: solid 4px #a4d2b8;
                    padding-left: 15px;
                }
            }

            .saying-icon {
                flex: 1;
                text-align: center;
            }

            .saying-text {
                flex: 1;
                color: #879bbc;

                h3 {
                    color: #000000;
                }

                h3, h4 {
                    margin:0;
                }

                h4 {
                    font-style: italic;
                    color: #879bbc;
                }
            }

        }

    }

    .contact-band {
        background-image: url(/images/contact.jpg);
        background-size: cover;
        background-position: 0 -100;
        min-height: 80px
        padding-top: 50px;
        padding-bottom: 10px;

        .contact-area {
            display: flex;
            justify-content: space-between;

            .contact {
                text-align: center;
                flex: 1;
            }
        }
    }

}

.page, .bio {
    .header {
        background-image: url(/images/contact.jpg);
        background-size: cover;
        height: 106px;
    }

    h1 {
        text-align: left;
    }

    .main {
        display: flex;

        .left {
            width: 67%;
            .page-banner {
                position: relative;

                img {
                    width: 100%;
                }
            }

            .content {
                img {
                    float: left;
                    margin-right: 15px;
                    margin-bottom: 15px;
                }
            }
        }

        .right {
            width: 33%;
            padding-left: 20px;

            h2 {
                text-transform: capitalize;
                margin-top: 0;
            }

            .categories-list {
                padding: 5px;
                list-style: none;

                .category {
                    font-weight: bold;

                    .category-name {
                        padding: 3px;
                        background-color: #efefef;
                    }

                    .services-list {
                        .service {
                            font-weight: normal;

                            a {
                                color: #000000;
                                text-decoration: none;
                            }
                        }
                    }
                }
            }
        }
    }
}

.service, .services, .videos, .video {
    .header {
        background-image: url(/images/contact.jpg);
        background-size: cover;
        height: 106px;
    }

    h1 {
        text-align: left;
    }

    .main {
        display: flex;

        .left {
            width: 67%;
            .page-banner {
                position: relative;

                img {
                    width: 100%;
                }
            }
        }

        .right {
            width: 33%;
            padding-left: 20px;

            h2 {
                text-transform: capitalize;
                margin-top: 0;
            }

            .categories-list {
                padding: 5px;
                list-style: none;

                .category {
                    font-weight: bold;

                    .category-name {
                        padding: 3px;
                        background-color: #efefef;
                    }

                    .services-list {
                        .service {
                            font-weight: normal;

                            a {
                                color: #000000;
                                text-decoration: none;
                            }
                        }
                    }
                }
            }
        }
    }
}

.videos-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;

    .video {
        width: 30%;
        margin: 8px;

        .thumbnail {
          position: relative;
          width: 100%;
          height: 200px;
          overflow: hidden;
        }
        .thumbnail img {
          position: absolute;
          left: 50%;
          top: 50%;
          height: 100%;
          width: auto;
          -webkit-transform: translate(-50%,-50%);
              -ms-transform: translate(-50%,-50%);
                  transform: translate(-50%,-50%);
        }
        .thumbnail img.portrait {
          width: 100%;
          height: auto;
        }
    }
}

.video {
    .page-banner {
        iframe {
            width: 100%;
            height: 50%;
        }
    }
}

.footer-band {
    background-color: #7ccdde;
    margin-bottom: 0;
    min-height: 80px
    padding-top: 50px;
    padding-bottom: 10px;

    .footer-area {
        display: flex;
        justify-content: space-between;

        .footer {
            text-align: left;
            flex: 1;
            padding: 20px;

            h3 {
                color: #FFFFFF;
            }

            .menu {
                list-style: none;
                padding: 0;

                li {
                    a {
                        color: #617880;
                        text-decoration: none;
                        display: block;
                        padding-top: 5px;
                        margin-bottom: 5px;
                        border-bottom: dotted 1px #617880;
                    }
                }
            }
        }
    }
}
