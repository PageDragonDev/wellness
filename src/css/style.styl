headingcolor = #195ca0
calloutcolor = #7ccdde;
fontcolor = #404040;

body {
    font-family: 'Montserrat', sans-serif;
    color: fontcolor;
    font-family: 'Muli', sans-serif;
}

a, a:visited {
    color: #519cd3;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
}

.header {
    background-color: #79c499;
    height: 106px;
    display: flex;
    flex-wrap: wrap;
    padding-left: 200px;

    .logo-area {
        flex: 1;

        .logo {

        }
    }

    .menu {
        flex: 1;
        display: flex;
        list-style: none;
        margin-top: 45px;
        padding: 0;

        li {
            margin-right: 15px;

            a {
                color: #ffffff;
                text-transform: uppercase;
                text-decoration: none;
                white-space: nowrap;
            }
        }
    }

    .social {
        flex: 1;
        margin-top: 40px;
        min-width: 118px;

        a {
            display: inline-block;

            .fab {
                font-size: 26px;
                color: #000000;
                margin-right: 10px;
            }
        }
    }
}

.home-banner {
    position: relative;

    img {
        width: 100%;
    }

    .content {
        font-family: 'Montserrat', sans-serif;
        position: absolute;
        left: 20%;
        top: 15%;
        color: #383045;
        width: 40%;

        .title-small {
            color: #14579b;
            font-size: 22px;
            text-transform: lowercase;
            font-weight: bold;
        }

        .title-large {
            color: #14579b;
            font-size: 42px;
            text-transform: uppercase;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .focused {
            text-transform: uppercase;
            font-size: 18px;
            margin-bottom: 35px;

            .you {
                color: #ffffff;
                font-size: 42px;
                position: relative;
                top: 7px;
            }
        }

        .tag {
            padding-left: 15px;
            border-left: solid 2px #000000;
            position:relative;
            left: -15px;
        }

        .learn-more {
            background-color: transparent;
            color: #ffffff;
            padding: 8px;
            border: solid 2px #ffffff;
            margin-top: 30px;
            font-weight: bold;
            padding-left: 12px;
            padding-right: 12px;
            display: inline-block;
            text-decoration: none;
            cursor: pointer;
        }
    }
}

.content {
    h1 {
        color: headingcolor;
        text-transform: uppercase;
        font-weight: normal;
        text-align: center;
        font-family: 'Montserrat', sans-serif;
    }
}

.home {

    .main {
        margin-bottom: 50px;
    }

    .callout-band {
        background-image: url(/images/grey-brick.jpg);
        background-position: 0 100px;
        background-repeat: repeat-x;
        height: 300px;
        margin-bottom: 50px;

        .callout-area {
            display: flex;

            .left {
                width: 29%
                img {
                    width: 100%;
                }
            }
            .info {
                flex: 1;
                background-color: calloutcolor;
                color: #ffffff;
                padding: 10px;
                text-align: center;

                h3 {
                    font-weight: normal;
                    text-transform: uppercase;
                    margin: 0;
                }
            }
            .right {
                width: 45.5%
                img {
                    width: 100%;
                }
            }
        }
    }

    .specialties-area {
        display: flex;
        flex-wrap: wrap;
        flex-direction: row;
        justify-content: space-between;
        margin-bottom: 50px;

        .specialty {
            flex: 1;
            text-align: center;
            margin-left: 9px;
            margin-right: 9px;
            font-size: 18px;
            line-height: 20px;
            position: relative;
            padding-bottom: 30px;
            min-width: 250px;
            margin-bottom: 20px;

            h3 {
                text-transform: uppercase;
                text-decoration: underline;
                font-size: 24px;
            }

            a {
                position: absolute;
                bottom: 0;
                display: block;
                width: 100%;
            }
        }
    }

    .newsletter-band {
        background-color: #ececec;
        margin-bottom: 50px;

        .newsletter-area {
            .icon-area {

            }
            .newsletter {
                padding-bottom: 20px;

                iframe {
                    max-width: 100%;
                }
            }
        }
    }

    .schedule-area {
        margin-bottom: 50px;
    }

    .green-band {
        background-color: #a4d2b8;
        padding: 15px;

        .green-area {
            text-align: center;

            h3 {
                text-align: center;
                color: #ffffff;
                text-transform: uppercase;
                font-size: 26px;
                font-weight: normal;
            }


            .green-callouts {
                display: flex;
                justify-content: space-between;

                .callout {

                }
            }
        }
    }

    .saying-band {
        background-color: #ececec;
        margin-bottom: 0;
        min-height: 80px;
        padding-top: 50px;
        padding-bottom: 50px;
        display: flex;

        .saying-area {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;

            .saying-title {
                flex: 1;

                h3 {
                    color: headingcolor;
                    text-transform: uppercase;
                    font-size: 26px;
                    border-left: solid 4px #a4d2b8;
                    padding-left: 15px;
                }
            }

            .sayings {
                width: 80%;
                display: flex;
                flex-wrap: wrap;


                .saying-text {
                    flex: 1;
                    color: #879bbc;
                    margin-right: 20px;

                    h3 {
                        color: #000000;
                    }

                    h3, h4 {
                        margin:0;
                    }

                    h4 {
                        font-style: italic;
                        color: #879bbc;
                    }
                }
            }

        }

    }

    .contact-band {
        background-image: url(/images/contact.jpg);
        background-size: cover;
        background-position: 0 -100;
        min-height: 80px
        padding-top: 50px;
        padding-bottom: 10px;

        .contact-area {
            display: flex;
            justify-content: space-between;

            .contact {
                text-align: center;
                flex: 1;
                display: block;
                color: #000000;
                text-decoration: none;

                .link-text {

                }
            }
        }
    }

}

.page, .bio {
    .header {
        background-image: url(/images/contact.jpg);
        background-size: cover;
        height: 106px;

        .banner {
            position: absolute;
            margin: 0 auto;
        }
    }

    h1 {
        text-align: left;
    }

    h2 {
        clear: both;
    }

    .main {
        display: flex;

        .left {
            min-width: 67%;
            .page-banner {
                position: relative;

                img {
                    width: 100%;
                }
            }

            .content {
                img {
                    float: left;
                    margin-right: 15px;
                    margin-bottom: 15px;
                    min-width: 100px;
                    max-width: 150px;
                }

                p, ul {
                    font-size: 20px;
                }
            }
        }

        .right {
            width: 33%;
            padding-left: 20px;

            h2 {
                text-transform: capitalize;
                margin-top: 0;
            }

            .categories-list {
                padding: 5px;
                list-style: none;

                .category {
                    font-weight: bold;

                    .category-name {
                        padding: 3px;
                        background-color: #a5dee9;
                    }

                    .services-list {
                        .service {
                            font-weight: normal;

                            a {
                                color: #000000;
                                text-decoration: none;
                            }
                        }
                    }
                }
            }
        }
    }
}

.service, .videos, .video {
    .header {
        background-image: url(/images/contact.jpg);
        background-size: cover;
        height: 106px;
    }

    h1 {
        text-align: left;
    }

    .main {
        display: flex;

        h2 {
            clear: both;
        }

        .left {
            width: 67%;
            .page-banner {
                position: relative;

                img {
                    width: 100%;
                }
            }

            .content {
                p, ul {
                    font-size: 20px;

                    img {
                        float: left;
                        margin-right: 15px;
                        margin-bottom: 15px;
                        max-width: 107px;
                        margin-bottom: 40px;
                    }
                }

                h3 {
                    clear: both;
                }


            }
        }

        .right {
            width: 33%;
            padding-left: 20px;

            h2 {
                text-transform: capitalize;
                margin-top: 0;
            }

            .categories-list {
                padding: 5px;
                list-style: none;

                .category {
                    font-weight: bold;

                    .category-name {
                        padding: 3px;
                        background-color: #a5dee9;
                        color: #ffffff;
                    }

                    .services-list {
                        .service {
                            font-weight: normal;

                            a {
                                color: #000000;
                                text-decoration: none;
                            }
                        }
                    }
                }
            }
        }
    }
}

.services {
    .header {
        background-image: url(/images/contact.jpg);
        background-size: cover;
        height: 106px;
    }

    h1 {
        text-align: left;
    }

    .main {

        h2 {
            clear: both;
        }

        .category {
            margin-bottom: 20px;
            min-height: 300px;
            display: flex;

            .icon-area {
                padding-top: 20px;
                padding-right: 20px;

                .icon {
                }
            }
        }
    }
}

.blog {
    .blog-list, .categories-list {
        .post {
            h2, h3 {
                margin-bottom: 0;

                a {
                    text-decoration: none;
                }
            }

            .date-categories {

                .date {

                }
                .categories {
                    float: right;
                }
            }

            .summary {
                margin-top: 10px;
                font-size: 18px;
            }
        }
    }
}

.post {
    .title {
        text-transform: capitalize;
    }

    &.lead {
        .summary {
            .image {

                img {
                    width: 100%;
                }
            }
        }

        .recent-posts {
            border-bottom: solid 1px accent;
            margin-top: 60px;
        }
    }

    h2 {
        a {
            text-decoration: none;
            color: #000000;
        }
    }
}

.videos-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;

    .video {
        width: 30%;
        margin: 8px;

        .thumbnail {
          position: relative;
          width: 100%;
          height: 200px;
          overflow: hidden;
        }
        .thumbnail img {
          position: absolute;
          left: 50%;
          top: 50%;
          height: 100%;
          width: auto;
          -webkit-transform: translate(-50%,-50%);
              -ms-transform: translate(-50%,-50%);
                  transform: translate(-50%,-50%);
        }
        .thumbnail img.portrait {
          width: 100%;
          height: auto;
        }
    }
}

.video {
    .page-banner {
        iframe {
            width: 100%;
            height: 50%;
        }
    }
}

.footer-band {
    background-color: #7ccdde;
    margin-bottom: 0;
    min-height: 80px
    padding-top: 50px;
    padding-bottom: 10px;
    margin-top: 30px;

    .footer-area {
        display: flex;

        .footer {
            text-align: left;
            padding: 20px;

            h3 {
                color: #FFFFFF;
            }

            .menu {
                list-style: none;
                padding: 0;
                display: flex;

                li {
                    padding-right: 20px;
                    a {
                        color: #617880;
                        text-decoration: none;
                        display: block;
                        padding-top: 5px;
                        margin-bottom: 5px;
                        border-bottom: dotted 1px #617880;
                    }
                }
            }
        }

        .social {
            .fab {
                font-size: 32px;
                color: #000000;
                margin-right: 10px;
            }
        }
    }
}
